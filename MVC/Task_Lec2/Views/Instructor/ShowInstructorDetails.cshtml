
@{
    ViewData["Title"] = "ShowInstructorDetails";
}

<h1>ShowInstructorDetails</h1>

@model Instructor
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Instructor ID</th>
            <th>Instructor Name</th>
            <th>Instructor Address</th>
            <th>Enrolled Department</th>
            <th>Enrolled Course</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.ID</td>
            <td>@Model.Name</td>
            <td>@Model.Address</td>
            <td>@Model.Department?.Name</td>  
            <td>@Model.Course?.Name</td>      
        </tr>
    </tbody>
</table>